# .bash_profile

# Get the aliases and functions
if [ -f ~/.bashrc ]; then
	. ~/.bashrc
fi

# User specific environment and startup programs

# export PS1="\[\e]2;\u@\H \w\a\e[32;1m\]>\[\e[0m\] "

export PATH=$PATH:$HOME/.local/bin:$HOME/bin
export PATH=$PATH:$HOME/bin

# needed
export CAT=$HOME/Programming/apache-tomcat-7.0.35/bin
export CATALINA_HOME=$HOME/Programming/apache-tomcat-7.0.35
export CATALINA_OPTS="-Xms512m -Xmx512m"
export JAVA_HOME=/usr/java/latest
export M2_HOME=$HOME/Programming/apache-maven-3.0.4/
export MAVEN_OPTS="-Xms256m -Xmx1G -XX:PermSize=300m"
export PATH=$PATH:$HOME/Programming/apache-maven-3.0.4/bin/

#android sdk
export PATH=$PATH:$HOME/Programming/adt-bundle-linux-x86_64-20130219/sdk/tools
export PATH=$PATH:$HOME/Programming/adt-bundle-linux-x86_64-20130219/sdk/platform-tools

#project specific variables


export CODE=$HOME/Programming/

# leiningen directory
export PATH=$PATH:$HOME/leiningen

export PATH
